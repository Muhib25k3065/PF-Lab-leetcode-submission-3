#include <stdio.h>

int main() {
    int n, i, j, k;
    
    printf("Enter n (matrix is n x n): ");
    if (scanf("%d", &n) != 1 || n <= 0) {
        printf("Invalid size\n");
        return 1;
    }

    int matrix[n][n];
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            printf("Enter value for row %d, column %d: ", i+1, j+1);
            scanf("%d", &matrix[i][j]);
        }
    }

    printf("\nMatrix before rotation:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) printf("%d ", matrix[i][j]);
        printf("\n");
    }

    for (i = 0; i < n; i++) {
        for (j = i + 1; j < n; j++) {
            int tmp = matrix[i][j];
            matrix[i][j] = matrix[j][i];
            matrix[j][i] = tmp;
        }
    }

    for (i = 0; i < n; i++) {
        for (j = 0, k = n - 1; j < k; j++, k--) {
            int tmp = matrix[i][j];
            matrix[i][j] = matrix[i][k];
            matrix[i][k] = tmp;
        }
    }

    printf("\nMatrix after 90-degree clockwise rotation:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) printf("%d ", matrix[i][j]);
        printf("\n");
    }

    return 0;
}
